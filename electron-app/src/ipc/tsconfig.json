{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "../../dist-electron/ipc",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": ["../*"],
      "@shared/*": ["../shared/*"],
      "@electron/*": ["../electron/*"],
      "@ipc/*": ["./*"]
    }
  },
  "include": ["./*"]
}
