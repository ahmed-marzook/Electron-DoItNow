# Environment Configuration Example
# Copy this file to .env.local, .env.preprod, or .env.production and fill in the values

# Application Environment (development, preprod, production)
NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=10000

# Electron Main Process Variables
# These are only available in the main process (not prefixed with VITE_)
API_BASE_URL=http://localhost:8080
API_TIMEOUT=10000

# Database Configuration (if needed)
# DB_PATH=./data/app.db

# Logging Configuration
LOG_LEVEL=info

# Sync Configuration
SYNC_INTERVAL_CRON=* * * * *
SYNC_TIMEZONE=America/New_York

# Feature Flags
ENABLE_AUTO_SYNC=true
ENABLE_DEV_TOOLS=true
